---
import ScrollSidebarLayout from "src/layouts/ScrollSidebarLayout.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import LinkButton from "@components/shared/LinkButton/LinkButton.astro";
import FeaturedProject from "@components/features/FeaturedProject/FeaturedProject.astro";
import { getCollection } from "astro:content";
import FeaturedProjectContainer from "@components/features/FeaturedProject/FeaturedProjectContainer";

const allFeaturedProjects = await getCollection("featured-projects");
---

