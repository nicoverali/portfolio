            <img src="/media/skills/Typescript.svg" />
          </div>
        </Grid>
        <Grid />
      </Grid>
    </section>

    <section class="projects">
      {
        allFeaturedProjects.map((project, i) => (
          <FeaturedProjectContainer client:idle>
            <FeaturedProject
              project={project}
              direction={i % 2 == 0 ? "normal" : "reverse"}
            />
          </FeaturedProjectContainer>
        ))
      }
    </section>
  </ScrollSidebarLayout>
</BaseLayout>

<script src="@scripts/index.ts"></script>
