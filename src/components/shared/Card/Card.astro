---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={className}>
  <slot />
</div>

<style>
  div {
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    border: 1px solid var(--color-primary-light-border);
    background-color: var(--color-background);
  }
</style>
