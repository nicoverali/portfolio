---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@sections/Hero/Hero.astro";
import MyName from "@sections/MyName/MyName.astro";
import AboutMe from "@sections/AboutMe/AboutMe.astro";
import Skills from "@sections/Skills/Skills.astro";
import Work from "@sections/Work/Work.astro";
import OtherProjects from "@sections/OtherProjects/OtherProjects.astro";
import Contact from "@sections/Contact/Contact.astro";
import Container from "@components/Grid/Container.astro";
---

<BaseLayout title="NicolÃ¡s Vera">
  <Container fluid noPadding class="first-section-colored">
    <Container fluid class="first-section">
      <Container>
        <Hero />
        <section class="my-name">
          <MyName />
        </section>
      </Container>
    </Container>
  </Container>

  <div class="second-section">
    <Container>
      <section class="about-me">
        <AboutMe />
      </section>
      <section class="skills">
        <Skills />
      </section>
    </Container>
  </div>
  <Container>
    <section class="work">
      <Work />
    </section>
  </Container>
  <Container>
    <OtherProjects />
  </Container>
  <Container>
    <Contact />
  </Container>
</BaseLayout>

<style>
  .my-name-fluid {
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    padding-bottom: var(--spacing-2xl);
    background-color: var(--color-background);
  }

  section.my-name {
    margin-top: var(--spacing-5xl);
  }

  section.about-me {
  }

  section.skills {
    margin-top: var(--spacing-5xl);
  }

  section.work {
    margin-top: var(--spacing-4xl);
    margin-bottom: var(--spacing-5xl);
  }

  .hero {
    margin-bottom: 80px;
  }

  .first-section-colored {
    background-color: #e7e5f7;

    .first-section {
      border-radius: 0 0 var(--radius-xl) var(--radius-xl);
      background-color: var(--color-background);
      padding-bottom: var(--spacing-4xl);
    }
  }

  .second-section {
    background-color: #e7e5f7;
    padding-top: var(--spacing-4xl);
    padding-bottom: var(--spacing-5xl);
    border-radius: 0 0 var(--radius-xl) var(--radius-xl);
  }
</style>

<script>
  import { configGsap } from "@scripts/configGsap";
  import { gsap } from "gsap";

  configGsap();

  const tl = gsap.timeline({
    defaults: { ease: "none" },
    scrollTrigger: {
      trigger: ".first-section",
      start: "bottom bottom",
      end: "bottom center",
      scrub: true,
    },
  });

  tl.to(
    ".first-section-colored",
    {
      duration: 0.15,
      paddingLeft: 24,
      paddingRight: 24,
    },
    0
  );

  // tl.to(".first-section", {
  //   duration: 1,
  //   y: -800,
  // });
</script>
