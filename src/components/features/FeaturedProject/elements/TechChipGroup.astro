---
interface Props {
  names: string[];
  direction?: "normal" | "reverse";
}

import TechChip from "./TechChip.astro";

const { names, direction = "normal" } = Astro.props;
const isReversed = direction === "reverse";
---

<ul class:list={[{ reversed: isReversed }]}>
  {names.map((name) => <TechChip>{name}</TechChip>)}
</ul>

<style>
  ul {
    display: flex;
    flex-direction: row;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;

    &.reversed {
      flex-direction: row-reverse;

      *:not(:last-child) {
        margin-left: var(--spacing-sm);
        margin-right: 0;
      }
    }

    *:not(:last-child) {
      margin-right: var(--spacing-sm);
    }
  }
</style>
