---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div>
  <Icon name={name} />
</div>

<style>
  div {
    display: inline-block;
    background-color: #fafafa;
    border: 1px solid #f1f1f1;
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    width: 80px;
    height: 80px;
  }

  svg {
    width: 100%;
    height: 100%;
    vertical-align: middle;
  }
</style>
