---
import { Icon } from "astro-icon/components";

interface Props {
  names: string[];
  filled?: boolean;
}

const { names, filled = true } = Astro.props;
---

<div class:list={["chip", { filled }]}>
  {
    names.map((name, i, all) =>
      i === all.length - 1 ? (
        <p class="chip-tech">{name}</p>
      ) : (
        <Fragment>
          <>
            <p class="chip-tech">{name}</p>
            <Icon is:inline={true} name={"asterisk"} />
          </>
        </Fragment>
      )
    )
  }
</div>

<style>
  .chip {
    display: flex;
    flex-direction: row;
    flex: 0;
    gap: var(--spacing-md);
    grid-row-gap: var(--spacing-xs);
    align-items: center;

    margin: 0;
    flex-wrap: wrap;

    &.filled {
      padding: var(--spacing-sm) var(--spacing-md);
      background-color: var(--color-text);
      border-radius: var(--radius-lg);

      p.chip-tech,
      [data-icon] path {
        color: var(--color-background);
        fill: var(--color-background);
      }
    }

    p.chip-tech {
      font-size: var(--font-size-caption);
      color: var(--color-text);
      vertical-align: middle;
      margin: 0;
    }

    [data-icon] {
      width: 8px;
      height: 8px;
      vertical-align: middle;
      margin: 0;

      path {
        fill: var(--color-text);
      }
    }
  }
</style>
