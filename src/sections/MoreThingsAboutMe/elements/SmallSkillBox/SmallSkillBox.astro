---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  displayName?: string;
}
const { name, displayName } = Astro.props;
---

<div>
  <Icon name={name} />
  <p translate="no">{displayName ?? name}</p>
</div>

<style>
  div {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--spacing-xs);
    background-color: var(--color-paper-on-paper);
    border: 1px solid var(--color-paper-border-on-paper);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    height: 24px;
    user-select: none;
  }

  p {
    font-size: var(--font-size-caption);
    color: var(--color-text-on-paper);
  }
</style>
