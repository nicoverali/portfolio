---
import GridCol from "@components/Grid/GridCol.astro";
import GridRow from "@components/Grid/GridRow.astro";
import LinkButton from "@components/LinkButton/LinkButton.astro";
import HeroImage from "@assets/images/hero.jpg";
import { Image } from "astro:assets";
---

<astro-hero-anim-container>
  <div class="hero">
    <GridRow>
      <GridCol xs={2}>
        <h1>
          <span>Analyze.</span>
          <span>Design.</span>
          <span>Build.</span>
        </h1>
      </GridCol>
      <GridCol xs={10}>
        <figure>
          <Image src={HeroImage} alt={"Artistic background"} />
          <figcaption>
            <LinkButton
              href="https://www.instagram.com/bumpofkevin/"
              size="caption"
            >
              Photo by Kevin Gamba
            </LinkButton>
          </figcaption>
        </figure>
      </GridCol>
    </GridRow>
  </div>
</astro-hero-anim-container>

<style>
  .hero {
    position: relative;
    height: calc(100vh - var(--el-header-height));
    display: flex;
  }

  h1 {
    opacity: 0;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    margin: 0;
    line-height: 150%;
    font-size: var(--font-size-display);
    font-weight: normal;
    display: flex;
    flex-direction: column;
    z-index: 1;
  }

  figure {
    position: relative;
    width: 100%;
    height: 100%;
    margin-left: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  figure img {
    background-color: var(--color-text-light);
    position: relative;
    width: 100%;
    height: 80%;
    object-fit: cover;
    border-radius: var(--radius-md);
  }

  figure figcaption {
    color: var(--color-text-light);
    font-size: var(--font-size-caption);
    margin-top: var(--spacing-sm);
  }
</style>

<script>
  import { gsap } from "gsap";

  class HeroAnimContainer extends HTMLElement {
    constructor() {
      super();
      gsap.context(() => {
        gsap.to("figure", {
          y: -200,
          scrollTrigger: {
            scrub: 2,
          },
        });

        gsap.fromTo(
          "h1",
          { x: -100 },
          {
            opacity: 1,
            x: 0,
            ease: "back.out",
            duration: 1,
          }
        );
        gsap.to("h1", {
          y: +200,
          ease: "power1.out",
          scrollTrigger: {
            scrub: 2,
          },
        });
      }, this);
    }
  }

  customElements.define("astro-hero-anim-container", HeroAnimContainer);
</script>
