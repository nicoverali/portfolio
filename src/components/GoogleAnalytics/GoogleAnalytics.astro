---
const tagId = import.meta.env.GOOGLE_TAG_ID;
if (!tagId) {
  console.warn("Missing Google Analytics tag ID");
}
---

<!-- Google tag (gtag.js) -->
<script async src={`https://www.googletagmanager.com/gtag/js?id=${tagId}`}
></script>
<script define:vars={{ tagId }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", tagId);

  gtag("event", "CardInteraction");
</script>
