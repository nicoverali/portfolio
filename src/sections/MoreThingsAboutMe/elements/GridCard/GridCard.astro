---
interface Props {
  gridArea?: string;
  "data-analytics"?: string;
}

const { gridArea, ...rest } = Astro.props;
---

<div class="card" {...rest}>
  <div class="content">
    <slot name="content" />
  </div>
  <div class="description">
    <slot name="description" />
  </div>
</div>

<style lang="scss" define:vars={{ gridArea }}>
  @import "../../../../styles/screens.scss";

  .card {
    background-color: var(--color-paper-on-background);
    height: 400px;
    width: 100%;
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);

    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);

    grid-area: var(--gridArea);

    .content {
      flex: 1;
    }

    .description {
      font-size: var(--font-size-h4);
      font-weight: 400;
      color: var(--font-size-on-paper);
    }
  }
</style>
