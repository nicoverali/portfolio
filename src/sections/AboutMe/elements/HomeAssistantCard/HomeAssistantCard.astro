---
import { Icon } from "astro-icon/components";
import GridCard from "../GridCard/GridCard.astro";
import HomeButtonBox from "../HomeButtonBox/HomeButtonBox.astro";
---

<GridCard>
  <p slot="header">
    I've smartify my house with Home Assistant and a Raspberry Pi
  </p>
  <div slot="content-fluid" class="bottom">
    <div class="list">
      <HomeButtonBox />
      <HomeButtonBox />
      <HomeButtonBox />
    </div>
    <div class="list">
      <HomeButtonBox />
      <HomeButtonBox />
      <HomeButtonBox />
    </div>
    <div class="list">
      <HomeButtonBox />
      <HomeButtonBox />
      <HomeButtonBox />
    </div>
  </div>
</GridCard>

<style>
  .bottom {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    justify-content: center;
    align-items: center;
  }

  .bottom::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    background: rgb(255, 255, 255);
    background: radial-gradient(
      ellipse,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 1) 60%
    );
  }

  .list {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-md);
  }

  .list:first-child {
    margin-left: -48px;
  }

  .list:last-child {
    margin-left: 48px;
  }
</style>
