<style>
  .container {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .container::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    box-shadow:
      inset -24px 0 48px 16px var(--color-paper-on-background),
      inset 24px 0 48px 16px var(--color-paper-on-background),
      inset 0 -24px 48px 16px var(--color-paper-on-background),
      inset 0 24px 48px 16px var(--color-paper-on-background);
  }

  .list {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-md);
  }

  .list:first-child {
    margin-left: -48px;
  }

  .list:last-child {
    margin-left: 48px;
  }
</style>
