---
import Card from "@components/Card/Card.astro";
import LinkButton from "@components/LinkButton/LinkButton.astro";
import TechChipGroup from "@sections/Work/elements/TechChipGroup/TechChipGroup.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<div class="container">
  <div class="left">
    <p>{project.data.short}</p>
    <h4>{project.data.name}</h4>
    <!-- <TechChipGroup names={project.data.techs} filled={false} /> -->
  </div>

  <LinkButton href="">View Project</LinkButton>
</div>

<style>
  .container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1px solid var(--color-text);
    padding: var(--spacing-lg) 0;
  }

  .left {
    display: flex;
    flex-direction: column;
    max-width: 50%;
  }

  h4 {
    font-size: var(--font-size-h4);
    font-weight: 600;
    letter-spacing: 0.3px;
    text-transform: capitalize;
    margin: 0;
  }

  p {
    font-size: var(--font-size-text);
    opacity: 0.6;
    overflow: hidden;
    margin: 0;
    margin-bottom: var(--spacing-xs);
  }

  .links {
    margin-top: var(--spacing-sm);
    display: flex;
    flex-direction: row;
    gap: var(--spacing-md);
  }
</style>
